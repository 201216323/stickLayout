<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_stickynavlayout_topview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                android:background="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="最新活动"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="#7a7a7a"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_viewpager"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xbanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:AutoPlayTime="2000"
                app:pointsVisibility="false"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewDesciption"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="福利来了！还在做明星梦吗？"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#cccccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                android:background="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="精彩推荐"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="#7a7a7a"/>
        </LinearLayout>

        //精彩推荐 线性布局

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/imageViewTuiJian"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/big_image_loding"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageViewTuiJian"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huodong_sanjiao2"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                //1

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewOne"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/big_image_loding"/>

                    <TextView
                        android:id="@+id/textViewNameOne"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="单人私教课"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textViewDesOne"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="一对一体验课"
                        android:textColor="#999999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textViewMoneyOne"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:text="￥666"
                        android:textColor="#f33e3e"
                        android:textSize="12sp"/>
                </LinearLayout>
                //2

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewTwo"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/big_image_loding"/>

                    <TextView
                        android:id="@+id/textViewNameTwo"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="单人私教课"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textViewDesTwo"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="一对一体验课"
                        android:textColor="#999999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textViewMoneyTwo"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:text="￥666"
                        android:textColor="#f33e3e"
                        android:textSize="12sp"/>
                </LinearLayout>
                //3

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewThree"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/big_image_loding"/>

                    <TextView
                        android:id="@+id/textViewNameThree"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="单人私教课"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textViewDesThree"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="一对一体验课"
                        android:textColor="#999999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textViewMoneyThree"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:text="￥666"
                        android:textColor="#f33e3e"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            //线

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc">

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewWangQiAct"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/course_des_next"
                android:gravity="center"
                android:text="查看更多活动"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#cccccc"/>


    </LinearLayout>
</ScrollView>